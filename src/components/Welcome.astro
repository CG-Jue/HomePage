---
import background from '../assets/background.svg'; // 导入背景图片
import Details from './Details.astro'; // 导入个人介绍和联系方式组件
---

<head>
	<meta charset="UTF-8"> <!-- 强制声明 UTF-8 编码 -->
</head>

<div id="container">
	<img id="background" src={background.src} alt="" fetchpriority="high" /> <!-- 背景图片 -->
	<main>
		<section id="welcome">
			<h1 id="welcome-title"><span class="highlight">欢迎</span>光临</h1> <!-- 欢迎标题 -->
		</section>
		<Details /> <!-- 个人介绍和联系方式 -->
	</main>
</div>

<style>
	#background {
		display: block; /* 显示背景图片 */
		width: 100%;
		height: auto;
		position: absolute;
		top: 0;
		left: 0;
		z-index: -1;
	}

	#container {
		font-family: 'Arial', sans-serif; /* 修复字体问题 */
		height: 100%;
		color: #c9d1d9; /* 字体颜色 */
		background-color: rgba(13, 17, 23, 0.85); /* 背景颜色，带有透明度 */
		backdrop-filter: blur(10px); /* 磨砂效果 */
		position: relative;
	}

	main {
		height: 100%;
		display: flex;
		flex-direction: row; /* 改为左右布局 */
		justify-content: center;
		align-items: center;
	}

	#welcome {
		text-align: center;
		padding: 40px;
	}

	#welcome h1 {
		font-size: 10em; /* 增大字体 */
		margin-bottom: 0.5em;
		background: linear-gradient(45deg, #58a6ff, #1f6feb); /* 渐变颜色 */
		-webkit-background-clip: text;
		color: transparent;
	}

	#welcome p {
		font-size: 1.2em;
		color: #8b949e; /* 字体颜色 */
	}

	.highlight {
		color: #58a6ff; /* 强调色 */
	}
</style>

<script> 
	document.addEventListener('DOMContentLoaded', () => {
		const title = document.getElementById('welcome-title');
		if (!title) return;
		const text = title.textContent;
		title.textContent = '';
		let index = 0;
		function typeWriter() {
		if (!text) return;

			if (index < text.length) {
				if (title) {
					title.textContent += text.charAt(index);
				}
				index++;
				setTimeout(typeWriter, 365); // 每个字母显示的时间间隔
			} else {
				const details = document.getElementById('details');
				if (details) {
					details.classList.add('show'); // 显示个人介绍和联系方式
				}
				title.style.display = 'none'; // 隐藏“欢迎光临”
			}
		}

		typeWriter();
	});
</script>
