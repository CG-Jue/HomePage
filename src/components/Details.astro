---
import avatar from '../assets/avatar.jpg'; // 导入头像图片
---

<div id="details">
	<div id="leftdivtop">
		<img id="avatar" src={avatar.src} alt="头像" width="150" height="150" /> <!-- 头像图片 -->
		<div id ='name'>
			<p>CGJUE</p>
		</div>
	</div>
	<div id ="leftdiv">
		<div id="introduction">
			<p>十二个十二个十二个十二个</p>
		</div>
		<div id="contact">
			<a href="https://github.com/yourusername" target="_blank" aria-label="GitHub">
				<img src="github-mark.svg" alt="GitHub" width="75" height="75" style="filter: invert(100%);" /> <!-- GitHub 图标 -->
			</a>
			<a href="mailto:your-email@example.com" target="_blank" aria-label="Email">
				<img src="email-icon.svg" alt="Email" width="75" height="75" style="filter: invert(100%);" /> <!-- Email 图标 -->
			</a>
			<a href="https://wpa.qq.com/msgrd?v=3&uin=yourqqnumber&site=qq&menu=yes" target="_blank" aria-label="QQ">
				<img src="qq-icon.svg" alt="QQ" width="75" height="75" style="filter: invert(100%);" /> <!-- QQ 图标 -->
			</a>
		</div>
	</div>
	
	
</div>

<div id="tools">
	<div id="toolsbox">
		<div>1</div>
		<div>2</div>
		<div>3</div>
		<div>4</div>
	</div>
</div>

<style>
	
	#details {
		display: flex;
		flex: 1;
		align-items: center;
		flex-direction: column;
		/* justify-content: space-between; */
		/* align-items: stretch; */
		padding: 20px;
		display: none; /* 初始隐藏 */
		color: #c9d1d9; /* 字体颜色 */
		background-color: rgba(13, 17, 23, 0.85); /* 背景颜色，带有透明度 */
		backdrop-filter: blur(10px); /* 磨砂效果 */
		border-radius: 8px;
	}

	#details.show {
		display: flex; /* 显示 */
	}

	#leftdiv {
		display: flex;
		flex-direction: column;
		justify-content: space-between; 
		align-items: center;
		margin-right: 20px;
	}

	

	

	#introduction {
		display: flex;
		flex-direction: column;
		align-items: center;
		/* justify-content: center; */

	}

	#introduction p {
		font-size: 3em;
		color: #8b949e;
	}

	#leftdivtop {
		display: flex;
		flex-direction: row;
		justify-content: flex-end; 
		align-items: center;
		margin-right: 20px;
	}
	#avatar {
		border-radius: 50%; /* 圆形头像 */
		margin-bottom: 20px;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* 边框阴影效果 */
	}
	#name {
		display: flex;
		/* flex-direction: column; */
		align-items: center;
		font-size: 4em; /* 修改字体大小 */
		color: #ffffff; /* 修改字体颜色 */
		
	}
	#contact {
		display: flex;
		flex-direction: row;
		/* align-items: center;	 */
		justify-content: space-around;
		align-items: center; /*交叉轴对齐方式*/
		/* width: 10%; */
		width: 10;
		height: 10;

		gap: 20px;
	}

	#contact a {
		color: #58a6ff;
		transition: color 0.3s;
	}

	#contact a:hover {
		color: #1f6feb;
	}
	#toolsbox {
		display: flex;
		flex-direction: column;

		flex: 1;
		flex-direction: row;
	}
	#tools {
		display: flex;
		flex: 2;
		display: none;
		justify-content: center;
		align-items: center;
	}
	#tools.show {
		display: flex;
	}
</style>
