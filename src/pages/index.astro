---
import Welcome from '../components/Welcome.astro'; // 导入欢迎组件
import Layout from '../layouts/Layout.astro'; // 导入布局组件
---

<head>
	<meta charset="UTF-8"> <!-- 强制声明 UTF-8 编码 -->
</head>

<Layout>
	<Welcome /> <!-- 欢迎部分 -->
</Layout>

<style>
	:global(body) {
		background-color: #0d1117; /* 深色背景 */
		margin: 0;
		padding: 0;
		font-family: 'Arial', sans-serif; /* 修复字体问题 */
		color: #c9d1d9; /* 字体颜色 */
	}

	Layout {
		display: flex;
		flex-direction: row; /* 改为左右布局 */
		gap: 20px;
		padding: 20px;
		background-color: rgba(22, 27, 34, 0.85); /* 深色背景，带有透明度 */
		backdrop-filter: blur(10px); /* 磨砂效果 */
		border-radius: 8px;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
		position: relative;
	}

	#contact {
		display: flex;
		justify-content: center;
		margin-top: 20px;
	}

	#contact a {
		color: #58a6ff;
		transition: color 0.3s;
	}

	#contact a:hover {
		color: #1f6feb;
	}
</style>
